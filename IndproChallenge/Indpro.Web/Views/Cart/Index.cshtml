@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main main-raised">
<div class="container">
    <div class="card card-plain">
        <div class="card-body">
            <h2 class="card-title">Shopping Cart</h2>
            <div class="table-responsive">
                <div class="table table-shopping">
                    <table id="cart-table" class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 shadow rounded p-3 bg-white">
                <h5 class="mb-3 mb-md-0">Total</h5>
                <h5 id="total-price" class="mb-3 mb-md-0">$0.00</h5>
                    <button onclick="PlaceOrder()" class="btn btn-success">Place Order</button>
            </div>
        </div>
    </div>
</div>
</div>
<script src="~/js/shoppingCart.js"></script>